    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: app",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "FLASK_DEBUG": "1"
            },
            "program": "app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: test",
            "type": "debugpy",
            "request": "launch",
            "env": {
                "FLASK_DEBUG": "1",
                "TEST_ON_AWS": "1"
            },
            "program": "tests/test.py",
            "console": "integratedTerminal"
        }
    ]
}